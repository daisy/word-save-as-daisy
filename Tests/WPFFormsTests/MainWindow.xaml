<Window x:Class="WPFFormsTests.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFFormsTests"
        mc:Ignorable="d"
        Title="Testing WPF addin forms" Width="300">
    <Grid>
        <StackPanel>
            <Button x:Name="TestAboutWindows"
                    Margin="5"
                    Click="TestAboutWindows_Click">
                About
            </Button>
            <Button x:Name="TestSettingsWindows"
                    Margin="5"
                    Click="TestSettingsWindows_Click">
                Settings
            </Button>
            <Button x:Name="TestMetadata"
                    Margin="5"
                    Click="TestMetadata_Click">
                Metadata
            </Button>
            <Button x:Name="TestConversionWindows"
                    Margin="5"
                    Click="TestConversionWindows_Click">
                Conversion form
            </Button>
        </StackPanel>
    </Grid>
</Window>
