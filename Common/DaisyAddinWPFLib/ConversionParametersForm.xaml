<Window x:Class="Daisy.SaveAsDAISY.WPF.ConversionParametersForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Daisy.SaveAsDAISY.WPF"
        xmlns:cc="clr-namespace:Daisy.SaveAsDAISY.WPF.CustomControls"
        mc:Ignorable="d"
        Title="{Binding Path=ConversionTitle}"
        MinWidth="400"
        SizeToContent="WidthAndHeight">
    <StackPanel>
        <cc:PathParameter x:Name="DestinationControl"
                          ParameterName="Output directory"
                          ParameterValue=""/>
        <cc:DocumentMetadata x:Name="DocumentMetadata" />
        <Expander Header="Conversion options"
                  x:Name="ConversionOptionsSection"
                  ExpandDirection="Down"
                  IsExpanded="True"
                  BorderThickness="1"
                  BorderBrush="Black"
                  Margin="5,0,5,0"
                  Expanded="ConversionOptionsSection_Expanded"
                  Collapsed="ConversionOptionsSection_Expanded">
            <StackPanel x:Name="ScriptOptions"></StackPanel>
        </Expander>
        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button x:Name="ConvertButton"
                    Content="Convert"
                    Margin="5"
                    Width="100"
                    Height="30"
                    Click="ConvertButton_Click"/>
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Margin="5"
                    Width="100"
                    Height="30"
                    Click="CancelButton_Click" />
        </StackPanel>
    </StackPanel>
</Window>
