<UserControl x:Class="Daisy.SaveAsDAISY.WPF.CustomControls.PathParameter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="400">
    <StackPanel>
        <Label x:Name="PathLabel"
               Content="{Binding Path=ParameterName}"
               Margin="5,0,5,0"
               />
        <DockPanel LastChildFill="True">
            <Button Content="Browse"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Margin="5,0,5,0"
                    Width="72"
                    x:Name="BrowseButton"
                    Click="BrowseButton_Click" />
            <TextBox TextWrapping="NoWrap"
                     Text="{Binding Path=ParameterValue, Mode=TwoWay}"
                     x:Name="PathTextBox"
                     HorizontalContentAlignment="Left"
                     VerticalAlignment="Center"
                     Margin="5,0,5,0"
                     AutomationProperties.LabeledBy="{Binding ElementName=PathLabel}"
                     AutomationProperties.HelpText="{Binding Path=ParameterDescription}" />
        </DockPanel>
    </StackPanel>
</UserControl>
