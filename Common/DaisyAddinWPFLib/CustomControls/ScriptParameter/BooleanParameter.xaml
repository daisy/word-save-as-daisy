<UserControl x:Class="Daisy.SaveAsDAISY.WPF.CustomControls.BooleanParameter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Daisy.SaveAsDAISY.WPF.CustomControls"
             mc:Ignorable="d"
             d:DesignWidth="200">
    <StackPanel>
        <CheckBox Content="{Binding Path=ParameterName}"
                  IsChecked="{Binding Path=ParameterValue, Mode=TwoWay}"
                  VerticalAlignment="Center"
                  Margin="5,10,5,5"
                  AutomationProperties.Name="{Binding Path=ParameterName}"
                  AutomationProperties.HelpText="{Binding Path=ParameterDescription}" />
    </StackPanel>
</UserControl>
