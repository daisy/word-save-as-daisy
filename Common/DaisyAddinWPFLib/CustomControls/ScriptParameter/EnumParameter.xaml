<UserControl x:Class="Daisy.SaveAsDAISY.WPF.CustomControls.EnumParameter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Daisy.SaveAsDAISY.WPF.CustomControls"
             mc:Ignorable="d"
             d:DesignWidth="200">
    <StackPanel>
        <Label Content="{Binding Path=ParameterName}"
               Margin="5,0,5,0"
               VerticalAlignment="Center" />
        <ComboBox Name="EnumComboBox"
                  ItemsSource="{Binding Path=ParameterValues}"
                  SelectedValuePath="Value"
                  DisplayMemberPath="Key"
                  SelectedValue="{Binding Path=ParameterValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  
                  VerticalAlignment="Center"
                  Margin="5,0,5,0"
                  AutomationProperties.Name="{Binding Path=ParameterName}"
                  AutomationProperties.HelpText="{Binding Path=ParameterDescription}">
            <!--<ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>-->
        </ComboBox>
    </StackPanel>
</UserControl>
