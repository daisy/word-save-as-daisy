<Window x:Class="Daisy.SaveAsDAISY.WPF.ConversionProgress"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Daisy.SaveAsDAISY.WPF"
        mc:Ignorable="d"
        Title="Progression"
        Width="450"
        SizeToContent="Height"
        Closing="Window_Closing">
    <StackPanel>
        <ProgressBar x:Name="ProgressionTracker"
                     Height="20"
                     Margin="5,5,5,0"
                     Minimum="0"
                     Maximum="100"
                     Value="0"
                     IsIndeterminate="False" />
        <Label x:Name="CurrentAction"
               Margin="5,5,5,0"
               Content="" />
        <Expander Header="Details"
                  ExpandDirection="Down"
                  IsExpanded="True"
                  BorderThickness="1"
                  BorderBrush="Black"
                  Margin="5,5,5,0">
            <StackPanel>
                <TextBox TextWrapping="Wrap"
                         Margin="5"
                         x:Name="MessageTextArea"
                         Height="200"
                         VerticalScrollBarVisibility="Auto"
                         IsReadOnly="True" />
            </StackPanel>
        </Expander>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Width="61"
                    Margin="5"
                    Click="CancelButton_Click">Cancel</Button>
            <Button Width="61"
                    Margin="5"
                    Click="CloseButton_Click">Close</Button>
        </StackPanel>
    </StackPanel>
</Window>
